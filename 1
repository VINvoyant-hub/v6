      opacity:.55;
      pointer-events:none;
    }
    @keyframes shimmer{
      0%{transform:translateX(-120%)}
      55%{transform:translateX(120%)}
      100%{transform:translateX(120%)}
    }
    .tTitle{
      margin:0 0 6px;
      font-weight: 950;
      letter-spacing:.02em;
    }
    .tBody{
      margin:0;
      color: rgba(234,240,255,.78);
      line-height:1.5;
      font-size: 13px;
    }

