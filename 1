    }
    .overlay.show{display:grid}
    .overlayCard{
      width:min(820px, 100%);
      border-radius: 22px;
      border:1px solid rgba(234,240,255,.16);
      background: linear-gradient(180deg, rgba(20,24,35,.92), rgba(10,12,18,.92));
      box-shadow: 0 40px 120px rgba(0,0,0,.7);
      overflow:hidden;
      position:relative;
    }
    .overlayCard::before{
      content:""; position:absolute; inset:-2px;
      background: radial-gradient(500px 260px at 18% 20%, rgba(0,212,255,.28), transparent 60%),
                  radial-gradient(500px 260px at 82% 80%, rgba(124,92,255,.22), transparent 60%);
      opacity:.85; pointer-events:none;
    }
    .overlayInner{position:relative; padding: 18px}
    .oT{margin:0 0 6px; font-size: 20px}
    .oP{margin:0; color: rgba(234,240,255,.78); line-height:1.5; font-size: 14px}
    .oA{display:flex; gap:10px; justify-content:flex-end; padding: 0 18px 16px}
  </style>
</head>

<body>
  <div class="wrap">
    <main class="card">
      <div class="inner">
        <h1 class="h">Whispers, not alarms.</h1>
        <p class="p">The system stays alive in the background — but never needy. You get meaningful updates only.</p>

        <section class="grid">
          <div class="panel">
            <div class="panelTitle">Whisper Feed</div>
            <div class="feed" id="feed"></div>
          </div>

          <div class="panel">
            <div class="panelTitle">Tone</div>
            <div class="tone">
              <div class="pill calm">Alive</div>
              <div class="pill info">Non-spammy</div>
              <div class="pill ok">Meaningful</div>
            </div>

            <div class="panelTitle" style="margin-top:14px">Controls</div>
            <div class="actions">
              <button class="btn" id="whisper1">Inject Whisper</button>
              <button class="btn" id="whisper2">Price Drop Whisper</button>
              <button class="btn primary" id="whisper3">Risk Shift Whisper</button>
            </div>
          </div>
        </section>
      </div>
    </main>
  </div>

  <div class="overlay" id="overlay">
    <div class="overlayCard">
      <div class="overlayInner">
        <h3 class="oT" id="oT">New Insight</h3>
        <p class="oP" id="oP">A whisper arrived. Read it. Then continue. No panic. Just precision.</p>
      </div>
      <div class="oA">
        <button class="btn" id="close">Understood</button>
        <button class="btn primary" id="addMore">Send Another Whisper</button>
      </div>
    </div>
  </div>

  <script>
    const feed = document.getElementById('feed');
    const overlay = document.getElementById('overlay');
    const oT = document.getElementById('oT');
    const oP = document.getElementById('oP');
    const close = document.getElementById('close');
    const addMore = document.getElementById('addMore');

    const whisper1 = document.getElementById('whisper1');
    const whisper2 = document.getElementById('whisper2');
    const whisper3 = document.getElementById('whisper3');

    function nowTime(){
      const d = new Date();
      return d.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
    }

    function pushWhisper(title, body){
      const el = document.createElement('div');
      el.className = 'whisper';
      el.innerHTML = `
        <div class="wTop">
          <div class="wTitle">${title}</div>
          <div class="wTime">${nowTime()}</div>
        </div>
        <div class="wBody">${body}</div>
      `;
      feed.prepend(el);

      // Bossy, guided read (commanding, but not noisy)
      oT.textContent = title;
      oP.textContent = body;
      overlay.classList.add('show');
    }

    close.addEventListener('click', ()=> overlay.classList.remove('show'));
    addMore.addEventListener('click', ()=>{
      overlay.classList.remove('show');
      pushWhisper("New insight available.", "A new diagnostic inference is ready. Read it when you’re focused.");
    });

    whisper1.addEventListener('click', ()=>{
      pushWhisper("New insight available.", "A new diagnostic inference is ready. Read it when you’re focused.");
    });

    whisper2.addEventListener('click', ()=>{
      pushWhisper("Price shift detected.", "A component you asked about just became cheaper.");
    });

    whisper3.addEventListener('click', ()=>{
      pushWhisper("Profile shift detected.", "Your vehicle’s risk profile just shifted.");
    });

    // Seed one whisper on load
    setTimeout(()=>{
      pushWhisper("New insight available.", "VINvoyant is awake. Updates will arrive as whispers — not alarms.");
    }, 700);
  </script>
</body>
</html>


