    <script>
        // JavaScript for VIN input and dynamic interactions

        document.getElementById('submit-vin').addEventListener('click', function() {
            const vinInput = document.getElementById('vin-input').value.trim();
            if (vinInput.length === 17) {
                const vehicleProfile = document.getElementById('vehicle-profile');
                vehicleProfile.classList.remove('hidden');
                vehicleProfile.innerHTML = `<p>Vehicle profile for VIN: <strong>${vinInput}</strong></p>`;
                // Show the next section or transition as needed
            } else {
                alert('Please enter a valid 17-character VIN.');
            }
        });

        document.getElementById('next-step').addEventListener('click', function() {
            const symptomInput = document.getElementById('symptom-input').value.trim();
            if (symptomInput) {
                const vehicleProfileSummary = document.querySelector('.vehicle-profile-summary');
                vehicleProfileSummary.innerHTML = `<p><strong>Symptom:</strong> ${symptomInput}</p>`;
                // Proceed to the next step or section
            } else
            {
            alert('Please describe the issue.');
        }
    });

    document.getElementById('upload-evidence').addEventListener('click', function() {
        const evidenceInput = document.getElementById('evidence-input');
        const file = evidenceInput.files[0];
        const evidencePreview = document.getElementById('evidence-preview');

        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                evidencePreview.innerHTML = `<img src="${e.target.result}" alt="Evidence Preview" style="max-width: 100%; border-radius: 5px;">`;
                evidencePreview.classList.remove('hidden');
            };
            reader.readAsDataURL(file);
        } else {
            alert('Please select a file to upload.');
        }
    });

    document.querySelectorAll('.select-tier').forEach(button => {
        button.addEventListener('click', function() {
            const tier = this.getAttribute('data-tier');
            alert(`You have selected the ${tier} tier.`);
            // Further logic for tier selection can be added here
        });
    });

    document.getElementById('submit-comments').addEventListener('click', function() {
        const technicianComments = document.getElementById('technician-comments').value.trim();
        if (technicianComments) {
            // Simulate sending technician's input
            alert('Technician insights submitted!');
            // Further logic can be added here
        } else {
            alert('Please enter your insights.');
        }
    });

    function addNotification(message) {
        const notificationList = document.querySelector('.notification-list');
        const li = document.createElement('li');
        li.textContent = message;
        notificationList.appendChild(li);
    }

    // Example of adding a notification
    addNotification('Your vehicle risk profile has been updated.');
    </script>
