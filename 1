      font-size: 15px;
      max-width: 70ch;
    }

    .assurance{
      margin-top: 16px;
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }
    @media (max-width: 880px){ .assurance{grid-template-columns:1fr} }

    .tile{
      border-radius: 18px;
      border:1px solid rgba(234,240,255,.10);
      background: rgba(0,0,0,.25);
      padding: 16px;
      position:relative;
      overflow:hidden;
    }
