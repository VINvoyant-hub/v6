  <script>
    const modal = document.getElementById('modal');
    const tone = document.getElementById('tone');
    const cont = document.getElementById('continue');
    const close = document.getElementById('close');
    const affirm = document.getElementById('affirm');

    tone.addEventListener('click', ()=> modal.classList.add('show'));
    close.addEventListener('click', ()=> modal.classList.remove('show'));
    affirm.addEventListener('click', ()=>{
      modal.classList.remove('show');
      alert("Proceeding. Calmly. Precisely. Next sections will take over.");
    });

    cont.addEventListener('click', ()=>{
      alert("Continue. You’re guided. No panic. No noise.");
    });

    // quiet “competence” prompt on load
    setTimeout(()=> modal.classList.add('show'), 900);
  </script>
